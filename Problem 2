#include <iostream>

using namespace std;

int main(){
	
	int arr[3][7], i, n;
	
	cout << "Enter temperatures of the week for Province A:" << endl;
	
	for(i = 1; i <= 7; i++){
		cout << "Day " << i << ": ";
		cin >> arr[0][i];
	} 
	
	cout << "Enter temperatures of the week for Province B:" << endl;
	
	for(i = 1; i <= 7; i++){
		cout << "Day " << i << ": ";
		cin >> arr[1][i];
	}
	
	cout << "Enter temperatures of the week for Province C:" << endl;
	
	for(i = 1; i <= 7; i++){
		cout << "Day " << i << ": ";
		cin >> arr[2][i];
	}
	
	cout << "\nTemperatures of the week:" << endl;
	
	for(i = 1; i <= 7; i++){
		cout << "Province A, Day " << i << ": " << arr[0][i]<< endl;
	}
	
	for(i = 1; i <= 7; i++){
		cout << "Province B, Day " << i << ": " << arr[1][i]<< endl;
	}
	
	for(i = 1; i <= 7; i++){
		cout << "Province C, Day " << i << ": " << arr[2][i]<< endl;
	}
	
	
	return 0;

}
